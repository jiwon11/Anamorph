<!-- Fixed navbar -->
<div class="ui massive secondary menu">
        <% if(user && user.id) {%>
        <a class="item" id="logo" href="/pages"><img src="../images/logo.png" id="logo_img"></a>
        <% } else {%>
        <% req.logOut(); %>
        <% req.session.destroy(); %>
        <a class="item" id="logo" href="/"><img src="../images/logo.png" id="logo_img"></a>
        <% } %>
        <div class="item" id="search_bar_contain">
            <div class="ui big icon input" id="search_bar">
              <input type="text" placeholder="Search...">
              <i class="search icon"></i>
            </div>
        </div>
        <a class="item" href="/pages">Recents</a>
        <a class="item" href="/follow">Follow</a>
        
        <div class="ui dropdown item">
            More
            <i class="dropdown icon"></i>
            <div class="menu">
              <div class="item">Applications</div>
              <div class="item">International Students</div>
              <div class="item">Scholarships</div>
            </div>
        </div>
        <div class="right menu">
              <div class="massive ui dropdown item" style='width:200px;height:50px;padding:0px; !important'>
              <% if(user.img){ %>
              <img src="<%= user.img %>" style="margin-right : 10px; height:50px; width:50px; !important">
              <% } else {%>
              <img src="<%= gravatar %>" style="margin-right : 10px; height:50px; width:50px; !important">
              <% } %>
              <%= user.username %> <i class="dropdown icon"></i>
              <div class="menu">
                <a class="item" href="/users/<%= user.username %>">profile</a>
                <a class="item" href="/process/logout">logout</a>
              </div>
            </div>
        </div>
      </div>
</div>
<!-- Fixed navbar -->