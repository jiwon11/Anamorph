<!--
<h1> <%= page.title %> </h1>
<h2> <%= page.content %> </h2>
<img src="<%= page.img %>"> 
<h2> <%= page.createdAt.toDateString() %> </h2>
-->
<div id="content">
        <section id="main_section">
            <article class="main_article" style="background-color : black;">
                <img src="<%= page.img %>" > 
            </article>
        </section>
        <aside id="main_aside">
            <input id="first" type="radio" name="tab" checked="checked" />
            <input id="second" type="radio" name="tab" />
            <section class="buttons">
                <label for="first">Infomations</label>
                <label for="second">Comments</label>
            </section>
            <div class="tab_item" style="margin: 20px;">
                <h1 class="ui header">
                    <img src="../images/logo.png" class="ui circular small image" style="margin-right : 10px;">
                    <%= page.user.username %>
                    <% if(user && user.id === page.user.id) {%>
                    <input id="page-user-id" type="hidden" value="<%= page.user.username %>">
                    <input id="page-id" type="hidden" value="<%= page.id %>">
                    <div class="ui black buttons" style="margin-left : 30px;">
                    <div class="ui button">Menu</div>
                    <div class="ui floating dropdown icon button">
                      <i class="dropdown icon"></i>
                      <div class="menu">
                        <div class="item"><i class="edit icon"></i> Edit Post</div>
                        <form action="/pages/<%= page.id %>/delete" method="post">
                        <input type="hidden" name="id" value="<%= page.id %>">
                        <input type="submit" value="Remove Post">
                        </form>
                        <div class="item"><i class="hide icon"></i> Hide Post</div>
                      </div>
                    </div>
                  </div>
                    <% } %>
                    <h3 class="ui left aligned header">
                    <div class="sub header"> <%= page.createdAt.toDateString() %> </div>
                    </h3>
                </h1>
                <h1 class="ui header" style="margin: 10px;">
                    <%= page.title %>
                    <div class="sub header" style="margin: 10px;"> <%= page.content %> </div>
                </h1>
                <h1>Tags</h1>
                <% for( var i=0; i<page.hashtags.length;i++) {%>
                <span class="ui black labels">
                    <a class="ui label" href="/tag/<%= page.hashtags[i].title %>">
                        <%= page.hashtags[i].title %>
                    </a>
                </span>
                <% } %>
            </div>
            <div class="tab_item" style="margin: 20px;">
                Comments
            </div>
        </aside>
    </div>

    <!-- 콘텐츠 -->
    <style>
        #content {
            /* 중앙 정렬 */
            width: 100%; margin: 0 auto;

            /* 수평 레이아웃 구성 */
            overflow: hidden;
        }
        #content > #main_section {
            width: 70%;
            height : 720px;
            float: left;
        }
        #content > #main_aside {
            width: 28%;
            float: right;
        }
        
    </style>
    <!-- 본문 -->
    <style>
        #main_section > article.main_article {
            height : 100%;
            margin-bottom: 10px;
            padding: 20px;
            border: 1px solid black;
            display:flex;
            justify-content:center;
            align-items:center;
        }
        .main_article > img {
            max-width: 100%; 
            height: auto;
        }
    </style>
    <!-- 사이드 -->
    <style>
        /* 첫 번째 탭 */
        #first:nth-of-type(1) { display: none; }
        #first:nth-of-type(1) ~ div:nth-of-type(1) { display: none; }
        #first:nth-of-type(1):checked ~ div:nth-of-type(1) { display: block; }

        /* 두 번째 탭 */
        #second:nth-of-type(2) { display: none; }
        #second:nth-of-type(2) ~ div:nth-of-type(2) { display: none; }
        #second:nth-of-type(2):checked ~ div:nth-of-type(2) { display: block; }

        /* 탭 모양 구성 */
        section.buttons { overflow: hidden; }
        section.buttons > label { 
            /* 수평 정렬 */
            display: block; float: left;

            /* 크기 및 글자 위치 지정*/
            width: 100px; height: 30px;
            line-height: 30px;
            text-align: center;
            

            /* 테두리 지정 */
            box-sizing: border-box;
            border: 1px solid black;

            /* 색상 지정*/
            background: white;
            color: black;
        }
        input:nth-of-type(1):checked ~ section.buttons >  label:nth-of-type(1) {
            background: black;
            color: white;
        }
        input:nth-of-type(2):checked ~ section.buttons >  label:nth-of-type(2) {
            background: black;
            color: white;
        }
    </style>
